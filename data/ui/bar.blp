using Gtk 4.0;
using Astal 4.0;

template $VanityBar: Astal.Window {
  styles [
    "vanity_bar"
  ]
  title: "VanityBar";
  exclusivity: exclusive;
  keymode: on_demand;
  margin_left: 15;
  margin_right: 15;
  margin_top: 5;

  CenterBox {
    styles [
      "bar_center"
    ]
    [end]
    Box right_box {
      styles [
        "bar_segment"
      ]

      Box {
        Label clock {
          name: "clock";
        }
      }
    }
  }
}
